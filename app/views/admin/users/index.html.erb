<h1>Current Users</h1>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Role</th>
      <th>Change Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <% if user.admin %>
          <td>Admin</td>
        <% else %>
          <td>Member</td>
        <% end %>
        <% if user.id != @current_user.id %>
          <td><%= link_to "Change Role", admin_user_path(user), method: :patch %></td>
        <% else %>
          <td>Current User</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

